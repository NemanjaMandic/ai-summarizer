{
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["tsconfig.json"] },
  "plugins": ["html", "@typescript-eslint", "import"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "next/core-web-vitals", "prettier"],
  "overrides": [
    {
      "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
      "extends": ["plugin:testing-library/react"]
    }
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": 1,
    "@typescript-eslint/consistent-type-imports": "warn",
    "react/jsx-curly-brace-presence": [1, { "props": "never" }],
    // "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./packages/client",
            "from": "./packages",
            "except": ["./client", "./common"],
            "message": "Client cannot import from other apps or products"
          },
          {
            "target": "./packages/server",
            "from": "./packages",
            "except": ["./client", "./common"],
            "message": "Server cannot import from other apps or products"
          }
        ]
      }
    ]
  },
  "env": {
    "es2020": true
  }
}
